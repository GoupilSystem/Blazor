@using Birk.Client.Bestilling.Utils.Constants

<MudCard Class="@($"bestilling-card {(IsSelected ? "selected" : "")}")" @onclick="Select">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Class="bestilling-card-title">
                <MudIcon Class="color-icon" Icon="@Icons.Material.Filled.Settings" />
                @Language.Eng[$"{Name}Title"]
            </MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent Class="bestilling-card-content">
        <MudText>@Language.Eng[$"{Name}Content"]</MudText>
    </MudCardContent>
</MudCard>

@code {

    [Parameter]
    public EventCallback<string> OnSelect { get; set; }

    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public bool IsSelected { get; set; }

    private async Task Select() {
        await OnSelect.InvokeAsync(Name);
    }
}
