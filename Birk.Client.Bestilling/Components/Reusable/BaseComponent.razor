@using Birk.Client.Bestilling.Components.Enums;
@using Birk.Client.Bestilling.Utils.Constants;

@code {
    [Parameter]
    public GuiType GuiType { get; set; }

    [Parameter]
    public string CssExtra { get; set; }

    [Parameter]
    public string Content { get; set; }

    [Parameter]
    public string Icon { get; set; }

    public string CssClass => $"buf-{GuiType.ToString().ToLower()} {CssExtra}";
    public string BuildingContent => Content = string.IsNullOrEmpty(Content) ? "" 
        : string.Concat(Content.Split('|').Select(s => Language.NO[s]));
}